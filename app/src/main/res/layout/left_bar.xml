<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/left_bar"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/left_bar_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="left_close_button, left_rotate_button, left_lock_button"
        />

    <ImageButton
        android:id="@+id/left_close_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_close_white_24dp"
        app:layout_constraintBottom_toTopOf="@+id/left_lock_button"
        app:layout_constraintTop_toBottomOf="@+id/left_rotate_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        />

    <ImageButton
        android:id="@+id/left_rotate_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_rotate_90_degrees_ccw_white_24dp"
        app:layout_constraintBottom_toTopOf="@+id/left_close_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:id="@+id/left_lock_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_lock_open_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_close_button"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>