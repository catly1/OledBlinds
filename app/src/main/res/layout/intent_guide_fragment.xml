<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/automation_guide_title"
        android:textSize="34sp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        />

    <View
        android:id="@+id/banner_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOnBackground"
        app:layout_constraintTop_toBottomOf="@id/banner"
        app:layout_constraintStart_toStartOf="@id/banner"
        app:layout_constraintEnd_toEndOf="@id/banner"
        />

    <TextView
        android:id="@+id/text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_label"
        android:textSize="24sp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_divider"
        app:layout_constraintVertical_chainStyle="spread"
        />

    <TextView
        android:id="@+id/open_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_intent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/copyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label" />



    <Button
        android:id="@+id/copyButton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/baseline_text_snippet_white_24dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        app:cornerRadius="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_label"
        app:layout_constraintStart_toEndOf="@id/open_intent"
        />


    <TextView
        android:id="@+id/text_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_label"
        android:textSize="24sp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyButton"
        app:layout_constraintVertical_chainStyle="spread"
        />

    <TextView
        android:id="@+id/open_intent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_intent"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/copyButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label2" />


    <Button
        android:id="@+id/copyButton2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/baseline_text_snippet_white_24dp"
        app:iconPadding="0dp"
        app:iconGravity="textStart"
        app:cornerRadius="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_label2"
        app:layout_constraintStart_toEndOf="@id/open_intent"
        />

    <TextView
        android:id="@+id/guide_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text='@string/intentGuideText'
        android:textSize="18sp"
        android:autoSizeMaxTextSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideButton"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="0.2"
        />

    <Button
        android:id="@+id/guideButton"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:cornerRadius="20dp"
        android:layout_height="70dp"
        android:text="@string/guide_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/next_button"
        />



    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:cornerRadius="20dp"
        android:layout_height="70dp"
        app:icon="@drawable/baseline_arrow_forward_white_24dp"
        app:iconGravity="end"
        android:text="@string/next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>